<style>
    table,
    th,
    td {
        border: 2px solid black;
        border-collapse: separate;
    }
</style>

<table>
    <h1>Students</h1>
    <button onclick="window.location.href = '/addStudent'">Add Student</button>
    <br></br>
    <th>Student ID</th>
    <th>Name</th>
    <th>GPA
    </th>
    <th>Actions</th>

    </tr>
    <% studentList.forEach((studentList)=>
        { %>
        <tr>
            <td>
                <%= studentList.sid %>
            </td>
            <td>
                <%= studentList.name %>
            </td>
            <td>
                <%= studentList.gpa %>
            </td>
            <!--Button to remove a student from the student list-->
            <td>
                <a href="/listStudents/<%= studentList.sid %>"> <p type="submit">Delete</p></a>
            </td>
        </tr>
        <% }) %>
</table>

